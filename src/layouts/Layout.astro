---
import { SITE_TITLE } from "../consts";

export interface Props {
  title?: string;
}

const { title = SITE_TITLE } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body>
    <div>
      <slot />
    </div>
  </body>
</html>
